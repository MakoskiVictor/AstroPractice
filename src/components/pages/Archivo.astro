---
import Layout from "@layouts/Layout.astro"
import HeroContainer from "@components/HeroContainer.astro"
import Button from "@components/Button.astro";
import { getI18N } from "@i18n/index";

const { currentLocale } = Astro
const i18n = getI18N({currentLocale})
---

<Layout title="Archivo" description="Archivo" >
    <HeroContainer img="/archivo-background.webp" >
        <h1 class=" text-5xl font-semibold mb-10 uppercase animate-fade-up  " >{ i18n.ARCHIVO.h1 }</h1>

        <Button 
            styles=" animate-fade-up "
            link="https://www.youtube.com/watch?v=1YmpPrqKP-g"
            blank={true}
            
        >
        {i18n.ARCHIVO.videoButton}
        </Button>
    </HeroContainer>
    <main>

    </main>
</Layout>